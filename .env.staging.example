# =============================================================================
# CHABRIN LEASE MANAGEMENT SYSTEM - STAGING ENVIRONMENT
# =============================================================================
# Use this for testing before production deployment
# =============================================================================

APP_NAME="Chabrin Lease System (Staging)"
APP_ENV=staging
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Africa/Nairobi
APP_URL=https://staging-leases.chabrinagencies.co.ke

# Logging - More verbose for debugging
LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=staging-db-host
DB_PORT=5432
DB_DATABASE=chabrin_leases_staging
DB_USERNAME=chabrin_staging
DB_PASSWORD=staging-password-here

# =============================================================================
# CACHE & SESSION
# =============================================================================
CACHE_STORE=redis
CACHE_PREFIX=chabrin_staging_

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=staging-redis-host
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
QUEUE_CONNECTION=redis

# =============================================================================
# MAIL CONFIGURATION (Use Mailtrap for staging)
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=staging@chabrinagencies.co.ke
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# SMS CONFIGURATION (Africa's Talking - Sandbox)
# =============================================================================
AT_USERNAME=sandbox
AT_API_KEY=your-sandbox-api-key
AT_SENDER_ID=CHABRIN
AT_ENVIRONMENT=sandbox

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
FILESYSTEM_DISK=local

# =============================================================================
# SEARCH (MeiliSearch)
# =============================================================================
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://staging-meilisearch:7700
MEILISEARCH_KEY=staging-master-key

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECURE_HEADERS=true
RATE_LIMIT_MAX=120
RATE_LIMIT_DECAY=60

# OTP Settings - More lenient for testing
OTP_EXPIRY_MINUTES=30
OTP_MAX_ATTEMPTS=10
OTP_RATE_LIMIT_PER_HOUR=20

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DISK=local
BACKUP_RETENTION_DAYS=7
BACKUP_WEEKLY_RETENTION_DAYS=14

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
PULSE_ENABLED=true
PULSE_DOMAIN=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_DIGITAL_SIGNATURES=true
FEATURE_BIOMETRIC_VERIFICATION=false
FEATURE_BULK_SMS=true

# =============================================================================
# DEBUG TOOLS (Staging only)
# =============================================================================
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=false
