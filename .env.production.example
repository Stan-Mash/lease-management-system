# =============================================================================
# CHABRIN LEASE MANAGEMENT SYSTEM - PRODUCTION ENVIRONMENT
# =============================================================================
# IMPORTANT: Copy this file to .env and update all placeholder values
# Never commit the actual .env file with real credentials
# =============================================================================

APP_NAME="Chabrin Lease System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Africa/Nairobi
APP_URL=https://leases.chabrinagencies.co.ke

# Logging - Use daily rotation in production
LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=your-production-db-host
DB_PORT=5432
DB_DATABASE=chabrin_leases_prod
DB_USERNAME=chabrin_app
DB_PASSWORD=your-secure-password-here

# Connection pooling (if using PgBouncer)
DB_SSLMODE=require

# =============================================================================
# CACHE & SESSION
# =============================================================================
CACHE_STORE=redis
CACHE_PREFIX=chabrin_prod_

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-host
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
QUEUE_CONNECTION=redis

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-email-provider.com
MAIL_PORT=587
MAIL_USERNAME=notifications@chabrinagencies.co.ke
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=notifications@chabrinagencies.co.ke
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# SMS CONFIGURATION (Africa's Talking)
# =============================================================================
AT_USERNAME=your-africastalking-username
AT_API_KEY=your-africastalking-api-key
AT_SENDER_ID=CHABRIN
AT_ENVIRONMENT=production

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
FILESYSTEM_DISK=local

# AWS S3 (Optional - for cloud storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=af-south-1
# AWS_BUCKET=chabrin-lease-documents
# AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# SEARCH (MeiliSearch)
# =============================================================================
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=https://your-meilisearch-host
MEILISEARCH_KEY=your-meilisearch-master-key

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# HSTS and secure headers
SECURE_HEADERS=true

# Rate limiting
RATE_LIMIT_MAX=60
RATE_LIMIT_DECAY=60

# OTP Settings
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3
OTP_RATE_LIMIT_PER_HOUR=3

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DISK=local
BACKUP_RETENTION_DAYS=30
BACKUP_WEEKLY_RETENTION_DAYS=90

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Laravel Pulse
PULSE_ENABLED=true
PULSE_DOMAIN=

# Sentry (Error Tracking)
# SENTRY_LARAVEL_DSN=https://your-sentry-dsn
# SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# CHIPS Database (if applicable)
CHIPS_DB_HOST=
CHIPS_DB_PORT=
CHIPS_DB_DATABASE=
CHIPS_DB_USERNAME=
CHIPS_DB_PASSWORD=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_DIGITAL_SIGNATURES=true
FEATURE_BIOMETRIC_VERIFICATION=false
FEATURE_BULK_SMS=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Optimize for production
OPCACHE_ENABLE=1
QUERY_LOG_THRESHOLD=1000

# Memory limits
MEMORY_LIMIT=256M
UPLOAD_MAX_SIZE=25M
